<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/dialog_layout"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="7dp">

        <View
            android:id="@+id/vert_divider"
            android:layout_height="match_parent"
            android:layout_width="1dip"
            android:layout_marginBottom="4dip"
            android:layout_marginTop="4dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <Button
            android:id="@+id/cancel_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/vert_divider"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:text="@android:string/cancel"
            style="?android:attr/borderlessButtonStyle"
            android:capitalize="sentences" />
        <Button
            android:id="@+id/ok_dialog_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/vert_divider"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:text="@string/universal_delete_string"
            style="?android:attr/borderlessButtonStyle" />
    </RelativeLayout>
</LinearLayout>
